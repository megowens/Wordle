<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import edu.virginia.cs.wordle.Wordle?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.virginia.cs.gui.WordleController">
    <padding>
        <Insets bottom="5.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="startText"/>
    <GridPane fx:id = "grid" alignment="BASELINE_CENTER" prefHeight="350.0" onKeyPressed="#onTextEntryEnter"/>
    <Label fx:id="displayMessage"/>
    <TextField id="enteredText" fx:id = "enteredWord" onKeyPressed="#onTextEntryEnter"
               prefHeight="30.0" prefWidth="10.0" alignment="TOP_LEFT"/>
    <Label fx:id="playAgain"/>
    <Button fx:id="yesButton" mnemonicParsing="false" text="Yes"/>
    <Button fx:id="noButton" mnemonicParsing="false" text="No"/>

</VBox>
